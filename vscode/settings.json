{
    "editor.tabSize": 2,
    "editor.renderIndentGuides": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.iconTheme": "vscode-icons",
    "workbench.activityBar.visible": false,
    "terminal.integrated.fontSize": 10,
    //wrap
    "editor.wordWrap": "on",
    "editor.fontSize": 13,
    "files.trimTrailingWhitespace": true,
    //ミニマップをfalse
    "editor.minimap.enabled": false,
    //bookmarkをsidebarに表示する
    "bookmarks.treeview.visible": true,
    //twigとvueでも有効にします
    "emmet.includeLanguages": {"twig": "html", "vue-html": "html"},
    "vim.hlsearch": true,
    // 言わずもがなeasymotion
    "vim.easymotion": true,
    "vim.easymotionKeys": "sdfghjkl",
    "vim.leader": "\\",
    // *で検索
    "vim.visualstar": true,
    // 諸々のctrlキーを使った操作が有効になる
    "vim.useCtrlKeys": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors" : {
        "normal": "#005f87",
        "insert": "#005f5f",
        "visual": "#86592d",
        "visualline": "#86592d",
        "visualblock": "#86592d",
        "replace": "#cc0000"
    },
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f87",
        "statusBar.noFolderBackground": "#005f87",
        "statusBar.debuggingBackground": "#005f87"
    },
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "vsicons.dontShowNewVersionMessage": true,
    "plantuml.render": "PlantUMLServer",
    "plantuml.server": "http://localhost:13080",
    "window.zoomLevel": -1,
    "editor.fontLigatures": true,
    "editor.fontFamily": "Ricty,Menlo, Monaco, 'Courier New', monospace",
    "workbench.editor.highlightModifiedTabs": true,
    "terminal.integrated.shell.osx": "/usr/local/bin/zsh",
    "vim.enableNeovim": true,
    "editor.renderControlCharacters": true,
    "solargraph.commandPath": ""
}